@import "../static.styl"

#view-students-projects
  width: containerWidthPct
  max-width: containerWidthPx2
  margin: spacing12x auto spacing16x

  & h1, h3
    line-height: lineHeight2
    font-family: fontFamilyRockwell
    font-size: fontSize2
    color: colorPrimary
    text-align: center

  & p
    text-align: center

  & .section
    & h3
      line-height: propUnit2x
      border-bottom: 1px solid colorGrayLight

    & ul
      margin-top: spacing4x

    & li
      margin-bottom: spacing8x


#view-students-projects .project-card

  & .img-container
    position: relative
    width: 440px
    height: 330px
    margin: 0 auto

    &:hover
      & .overlay
        opacity: 0.5
        cursor: pointer

      & h4
        display: block

    & .overlay
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-color: colorBlackDark
      opacity: 0.0

    & h4
      display: none
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      color: colorWhite

  & img
    display: block
    width: 100%
    height: 100%

  & .info
    margin-top: spacing2x
    line-height: lineHeight0
    font-size: fontSize0
    text-align: center

    & h4
      line-height: lineHeight1
      font-size: fontSize1
      color: colorPrimary
