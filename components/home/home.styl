@import "../static.styl"

#home-banner-container
  position: relative
  width: 100%
  height: 500px

  & #banner-bg-img
    width: 100%
    height: 100%
    background: url('../../assets/sincos.jpg')
    background-size: cover
    background-position: center

  & #banner-bg-overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: colorTurquoiseDark
    opacity: 0.6

  & #banner-content
    position: absolute
    top: 40%
    left: 10%
    transform: translateY(-50%)

    & h1
      color: colorWhite
      font-size: fontSize4
      line-height: lineHeight4

      @media screen and (max-width: mediaWidth1)
        font-size: fontSize2

    & h2
      margin-bottom: spacing2x
      color: colorTurquoiseLight
      font-size: fontSize0
      line-height: lineHeight0


  & button
    position: absolute
    right: 10%
    bottom: 20%
    padding: spacing2x spacing3x

#view-home .section
  width: containerWidthPct
  max-width: containerWidthPx1
  margin: 0 auto
  background-color: colorWhite

  & h2
    margin: spacing16x 0
    font-family: fontFamilyRockwell
    font-size: fontSize2
    line-height: lineHeight2
    letter-spacing: letterSpacingRoboto
    text-align: center


// Home Tile Cards
.card-container

  & + div
    text-align: center
    margin-top: spacing12x
    margin-bottom: spacing16x

.home-tile-card
  display: inline-block
  width: calc(33% - 46px)
  padding: 0 spacing3x
  vertical-align: top

  &:first-child
    margin-left: 0
  &:last-child
    margin-right: 0

  & .img-container
    position: relative
    height: propUnit6x

    & img
      position: relative
      left: 50%
      transform: translateX(-50%)
      width: 100%
      max-width: propUnit6x

  & h3
    color: colorPrimary
    margin: spacing4x 0
    font-size: fontSize2
    line-height: lineHeight1
    text-align: center

  & p
    margin-bottom: spacing4x
    color: colorBlackDark
    text-align: center

  & button
    position: relative
    left: 50%
    transform: translateX(-50%)


// Home Section - Programs
#view-home .section.programs
  & .home-tile-card
    @media screen and (max-width: mediaWidth2)
      display: block
      width: 100%
      margin-bottom: spacing8x
      box-sizing: border-box

      & p
        width: propUnit8x
        margin: 0 auto spacing4x

      & .img-container
        max-height: propUnit4x


// Home Section - Success
#view-home .section.success
  border-top: 1px solid colorGrayLight

  & .img-container
    background-color: colorPrimary
    height: propUnit6x

    & img
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      width: propUnit3x

  & h3
    padding: spacing2x 0
    max-height: propUnit2x

  & .home-tile-card
    @media screen and (max-width: mediaWidth2)
      display: block
      width: 60%
      min-width: propUnit10x
      margin: 0 auto spacing8x
      box-sizing: border-box

      & p
        width: propUnit8x
        margin: 0 auto spacing4x

      & .img-container
        width: propUnit8x
        margin: 0 auto


// Home Section - Stories
#view-home .section.stories
  position: relative
  width: 100%
  max-width: 800px
  margin: spacing12x auto spacing24x

  & .story-banner-container
    position: relative

    & .story-banner-img
      width: 100%
      height: propUnit12x
      background: url('../../assets/classroom1.jpg')
      background-position: center
      background-size: cover

    & .story-banner-overlay
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: colorTurquoiseDark
      opacity: 0.2

    & .text-container
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      padding: spacing4x spacing8x
      background: rgba(0, 0, 0, 0.7)

      & h2
        margin: 0 0 spacing4x
        color: colorWhite

#view-home .profile-container
  padding-bottom: propUnit4x
  padding-left: spacing4x

#view-home .profile-img-container
  display: inline-block
  width: propUnit6x
  height: propUnit6x
  margin-right: spacing6x
  border-radius: 100%
  overflow: hidden
  border: 4px solid colorPrimary

  & img
    width: 100%
    height: 100%

#view-home .profile-text-container
  display: inline-block
  width: calc(100% - 248px)
  vertical-align: top

  & h2
    margin-top: 0
    margin-bottom: spacing1x
    text-align: left
    font-size: fontSize1
    color: colorBlackDark

  & h3
    margin: 0
    line-height: lineHeight0
    font-family: fontFamilyRoboto
    font-size: fontSize0
    color: colorPrimary

  & p
    color: colorBlackDark

.section.stories .action-join
  position: absolute
  right: 0
  bottom: 0

#home-announce
  position: fixed
  bottom: spacing4x
  left: spacing4x
  transform: translate(-10%, 10%) scale(0.8)
  width: propUnit12x
  padding: spacing2x spacing4x
  box-sizing: border-box
  background-color: colorYellow
  opacity: 0.0
  visibility: hidden
  z-index: 10
  transition: all linear 0.15s

  &.show
    opacity: 1.0
    visibility: visible
    transform: translate(0, 0) scale(1.0)

  @media screen and (max-width: mediaWidth2)
    bottom: 0
    left: 0
    width: 100%

  & button
    position: absolute
    top: spacing2x
    right: spacing2x
    background-color: colorYellow
    line-height: 0
    padding: 0

    &:hover
      filter: none

    & img
      width: 24px
      height: 24px

  & h3
    line-height: lineHeight0
    margin: spacing1x 0
    font-size: fontSize0
    font-weight: bold

  & .text-container
    position: relative
    height: propUnit3x
    overflow: hidden
    box-shadow: inset 0px -11px 8px 8px colorYellow

    @media screen and (max-width: mediaWidth2)
      height: propUnit2x

  & p
    margin: 0
    line-height: lineHeight0
    font-size: fontSize0

  & a
    display: block
    float: right
    margin: spacing2x 0
