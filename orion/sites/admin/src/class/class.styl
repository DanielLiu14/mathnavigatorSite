@import "../static.styl"

#view-class
    width: 100%
    height: 400px
    padding: 0 spacing2x
    box-sizing: border-box
    color: colorBlackDark

    & h1
        margin: spacing4x 0
        line-height: lineHeight3
        font-size: fontSize3

    & ul
        list-style: none
        margin: 0
        padding: 0

#view-class #list-heading
    border-bottom: 2px solid colorGrayDark

    & li
        display: inline-block
        height: spacing4x
        line-height: spacing4x

#view-class #class-row
    border-bottom: 1px solid colorGrayDark

    & li
        display: inline-block
        height: spacing8x
        line-height: spacing8x
        position: relative

 #view-class
     & .li-small
       width: spacing10x
     & .li-med
       width: spacing20x
     & .li-large
       width: spacing30x

#add-class
    & a
        display: inline-block
        margin: spacing2x 0
        background-color: colorTurquoise
        color: white
        padding: 0.75em;
        border-radius: 10px;
