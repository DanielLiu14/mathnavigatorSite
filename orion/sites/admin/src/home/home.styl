@import "../static.styl"

#view-home
  padding: 10px
  width: 100%
  height: 400px
  background-color: colorWhite

#view-home #view-content
    display: inline-block
    float:left

    & h2
        margin: spacing2x

    & ul
        list-style: none

    & li
        margin: spacing2x


#view-home #box-and-button
    display: inline-block
    float: left
    margin-left: spacing8x
    position: relative

    .boxed
        border: 2px solid black
        width: 360px
        height: 240px
        float: right
        margin-top: spacing2x
        margin-bottom: 60px

#go-to-page
      display: block
      position: absolute
      bottom: 0
      right: 0
      margin: 0
      background-color: colorTurquoise
      color: white
      padding: 0.75em;
      border-radius: 10px;
