@import "../static.styl"

#view-home
  width: 100%
  height: 400px
  padding: 10px
  background-color: colorWhite

#view-home #view-content
    display: inline-block
    float:left

    & h2
        margin: spacing2x

    & ul
        list-style: none

    & li
        margin: spacing2x


#view-home #box-and-button
    position: relative
    float: left
    display: inline-block
    margin-left: spacing8x

    .boxed
        float: right
        width: 360px
        height: 240px
        border: 2px solid black
        margin-top: spacing2x
        margin-bottom: 60px

#go-to-page
    position: absolute
    bottom: 0
    right: 0
    display: block
    padding: 0.75em
    border-radius: 10px
    margin: 0
    background-color: colorTurquoise
    color: white
