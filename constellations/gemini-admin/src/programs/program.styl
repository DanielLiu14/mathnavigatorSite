@import "../static.styl"

#view-program
  position: relative
  width: 100%
  margin-bottom: spacing24x
  padding: 0 spacing2x
  box-sizing: border-box
  color: colorBlackDark

  & h1
    display: inline-block
    margin: spacing4x 0
    line-height: lineHeight3
    font-size: fontSize3

  & p
    display: inline-block
    position: absolute
    right: 0
    top: 10%
    transform: translateY(-10%)
    margin: 0
    text-align: right

  & ul
    list-style: none
    margin: 0
    padding: 0

#view-program #list-buttons
    display: block
    margin-top: spacing4x
    position: relative

    & button
        display: inline-block
        padding: 0.75em
        border-radius: 10px
        background-color: colorTurquoise
        color: white
        position: absolute

a.add-program
    display: inline-block
    border-radius: 10px
    background-color: colorTurquoise
    color: white
    position: relative

#view-program #list-buttons .publish
    position: absolute
    right: 0
    width: 420px

    & p
      position: static
      right: unset
      text-align: left

    & button
      position: absolute
      right: 0
      margin: 0
