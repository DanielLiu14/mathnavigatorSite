@import "static"

#view-achievements-container
  width: propUnit16x
  margin: 0 auto spacing16x


  & h1
    margin-top: spacing12x
    line-height: lineHeight2
    font-family: fontFamilyRockwell
    font-size: fontSize2
    color: colorPrimary
    text-align: center

  & .subheaders
    margin: spacing4x 0 spacing12x
    line-height: lineHeight1
    font-size: fontSize1
    color: colorBlackDark
    text-align: center

.achieve-card
  margin-bottom: spacing8x

  & h2
    margin-bottom: spacing3x
    line-height: lineHeight3
    font-size: fontSize1
    color: colorPrimary
    border-bottom: 1px solid colorGrayLight

  & a
    margin-top: spacing1x
    line-height: lineHeight0
    font-size: fontSize0

  & .achieve-line
    line-height: lineHeight0
    font-size: fontSize0
    margin-bottom: spacing2x

    &.highlight
      color: colorTurquoiseLight
