@import "static"

#view-program-container
  width: containerWidthPct
  max-width: containerWidthPx
  margin: 0 auto

#view-program-container .section
  padding: spacing8x 0 spacing4x
  margin-bottom: spacing8x

  & h2.section-title
    line-height: propUnit2x
    margin-bottom: spacing8x
    font-family: fontFamilyRockwell
    font-size: fontSize2
    color: colorPrimary
    border-bottom: 1px solid colorGrayLight

  & h3
    line-height: lineHeight1
    font-size: fontSize1
    color: colorBlackDark

#view-program-container .section .program-card
  position: relative
  display: inline-block
  width: 220px
  height: 200px
  margin: 0px spacing6x spacing6x 0
  box-sizing: border-box
  background-color: colorPrimary
  text-align: center
  vertical-align: top
  cursor: pointer

  &:hover
    filter: brightness(110%)

  & .program-card-content
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

  & h2
    width: propUnit6x
    margin: 0
    line-height: lineHeight1
    font-size: fontSize1
    color: colorWhite

  & h3
    margin: 0
    margin-top: spacing1x
    margin-bottom: spacing4x
    line-height: fontSize0
    font-size: fontSize0
    color: colorWhite
