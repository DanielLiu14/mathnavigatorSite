@import "static"

#view-header
  background-color: colorBlackDark
  border-bottom: 2px solid colorAccent2

#view-header-container
  position: relative
  width: containerWidthPct
  max-width: containerWidthPx
  height: 100%
  margin: 0 auto
  padding: padding3x

#header-logo
  & .icon
    width: 36px
    height: 36px

.header-menu-btn
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  width: 140px
  height: 40px
  border: 0px solid colorWhite
  outline: none
  box-sizing: border-box
  background-color: transparent
  color: colorWhite
  font-family: fontFamilyRoboto
  font-size: fontSizeNormal
  letter-spacing: letterSpacing
  cursor: pointer

  &.show
  &:hover
    border: 1px solid colorWhite

  & .icon-arrow
    display: inline-block
    width: 18px
    height: 10px
    margin-left: padding1x
    background-image: url('../assets/arrow_down_white.svg')
    background-size: cover

    &.show
      background-image: url('../assets/arrow_up_white.svg')
      background-size: cover

.header-menu-list
  position: absolute
  left: 50%
  transform: translate(-50%, 0px)
  box-shadow: 0px 2px 4px #000000
  opacity: 0
  visibility: hidden
  transition: all linear 0.2s

  &.show
    transform: translate(-50%, 16px)
    visibility: visible
    opacity: 1

  & ul
    margin: 0px
    padding: 0px
    background-color: colorBlackDark

  & a
    color: colorWhite
    text-decoration: none

    &:hover div
      color: colorAccent1

  & li
    padding: padding2x padding3x
    list-style: none
    font-size: fontSizeNormal
    cursor: pointer
