@import "static"

body
  margin: 0
  background-color: colorBackground
  color: colorBlackDark
  font-family: fontFamilyArial
  font-size: fontSizeNormal
  letter-spacing: letterSpacing

h1
h2
h3
  margin: 0
  font-family: fontFamilyArial
  letter-spacing: letterSpacing

p
  margin: padding2x 0
  font-family: fontFamilySourceSans
  font-size: fontSizeSmall
  letter-spacing: letterSpacing

.logo
  font-family: fontFamilyRockwell
  font-size: 17px
  letter-spacing: 2px

  &:before
    content: 'Math Navigator'

button
  padding: padding1x padding2x
  outline: none
  border: none
  color: colorWhite
  background-color: colorAccent1
  font-family: fontFamilyArial
  font-size: fontSizeSmall
  line-height: lineHeightSmall
  letter-spacing: letterSpacing
  cursor: pointer

  &:hover
    filter: brightness(110%)

  &.inverted
    color: colorAccent1
    background-color: colorWhite
    border: 1px solid colorAccent1

    &:hover
      color: colorWhite
      background-color: colorAccent1
