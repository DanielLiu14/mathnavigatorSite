@import "static"

#home-banner-container
  position: relative
  width: 100%
  height: 480px

  & #banner-bg-img
    width: 100%
    height: 100%
    background: url('../assets/classroom.jpg')
    background-size: cover
    background-position: center

  & #banner-bg-overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(0,0,0, 0.55)

  & #banner-logo-wrapper
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

    & img:first-child
      display: block
      width: 48px
      margin: padding4x auto

    & img:last-child
      display: block
      width: 240px

.section
  width: containerWidthPct
  max-width: containerWidthPx
  margin: 0 auto
  background-color: colorWhite
