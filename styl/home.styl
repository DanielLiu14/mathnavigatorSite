@import "static"

#home-banner-container
  position: relative
  width: 100%
  height: 500px

  & #banner-bg-img
    width: 100%
    height: 100%
    background: url('../assets/sincos.jpg')
    background-size: cover
    background-position: center

  & #banner-bg-overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: colorAccent2
    opacity: 0.6

  & #banner-content
    position: absolute
    top: 40%
    left: 10%
    transform: translateY(-50%)

    & h1
      color: colorWhite
      font-size: fontSizeLarger
      line-height: lineHeightLarger
    & h2
      margin-bottom: spacing2x
      color: colorAccent1
      font-size: fontSizeSmall
      line-height: lineHeightSmall

  & button
    position: absolute
    right: 10%
    bottom: 20%
    padding: spacing2x spacing3x

.section
  width: containerWidthPct
  max-width: containerWidthPx
  margin: 0 auto
  background-color: colorWhite

  & h2
    margin: spacing16x 0
    font-family: fontFamilyRockwell
    font-size: fontSizeNormal
    line-height: lineHeightNormal
    text-align: center

// Home Tile Cards
.card-container

  & + div
    text-align: center
    margin-top: spacing12x
    margin-bottom: spacing16x

.home-tile-card
  display: inline-block
  width: calc(33% - 46px)
  padding: 0 spacing3x
  vertical-align: top

  &:first-child
    margin-left: 0
  &:last-child
    margin-right: 0

  & .img-container
    position: relative
    height: propUnit6x

    & img
      position: relative
      left: 50%
      transform: translateX(-50%)
      width: 100%
      max-width: propUnit6x

  & h3
    color: colorPrimary
    margin: spacing4x 0
    font-size: fontSizeLarge
    line-height: lineHeightNormal
    text-align: center

  & p
    margin-bottom: spacing4x
    color: colorBlackDark
    text-align: center

  & button
    position: relative
    left: 50%
    transform: translateX(-50%)


// Home Section - Programs

// Home Section - Success
.section.success
  border-top: 1px solid colorGrayLight

  & .img-container
    background-color: colorPrimary
    height: propUnit6x

    & img
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      width: propUnit3x

  & h3
    margin: spacing6x 0


// Home Section - Stories
.section.stories
  position: relative
  width: 100%
  max-width: 800px
  margin: 0 auto
  margin-bottom: spacing24x

.profile-container
  padding-bottom: propUnit4x
  padding-left: spacing4x

.profile-img-container
  display: inline-block
  width: propUnit6x
  height: propUnit6x
  margin-right: spacing6x
  border-radius: 100%
  overflow: hidden
  border: 2px solid colorPrimary

  & img
    width: 100%
    height: 100%

.profile-text-container
  display: inline-block
  width: calc(100% - 244px)
  vertical-align: top

  & h2
    margin-top: 0
    margin-bottom: spacing2x
    text-align: left
    font-size: fontSizeNormal
    color: colorPrimary

  & h3
    margin: 0
    line-height: lineHeightSmall
    font-size: fontSizeSmall
    color: colorBlackDark

  & p
    color: colorBlackDark

.section.stories .action-join
  position: absolute
  right: 0
  bottom: 0
