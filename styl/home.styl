@import "static"

#home-banner-container
  position: relative
  width: 100%
  height: 500px

  & #banner-bg-img
    width: 100%
    height: 100%
    background: url('../assets/sincos.jpg')
    background-size: cover
    background-position: center

  & #banner-bg-overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: colorAccent2
    opacity: 0.6

  & #banner-content
    position: absolute
    top: 40%
    left: 10%
    transform: translateY(-50%)

    & h1
      color: colorWhite
      font-size: fontSizeLarger
      line-height: lineHeightLarger
    & h2
      margin-bottom: padding2x
      color: colorAccent1
      font-size: fontSizeSmall
      line-height: lineHeightSmall

  & button
    position: absolute
    right: 10%
    bottom: 20%
    padding: padding2x padding3x







.section
  width: containerWidthPct
  max-width: containerWidthPx
  margin: 0 auto
  background-color: colorWhite
